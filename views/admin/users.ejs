<!-- views/admin/users.ejs -->

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Quản lý người dùng</h3>
    <span class="text-muted">
      Tổng người dùng: <b><%= totalUsers %></b> |
      Chủ shop: <b><%= totalShops %></b>
    </span>
  </div>

  <!-- Bộ lọc -->
  <form class="row g-2 mb-3" method="get" action="/admin/users">
    <div class="col-md-3">
      <input
        type="text"
        name="search"
        class="form-control"
        placeholder="Tìm theo tên hoặc email..."
        value="<%= search %>"
      />
    </div>
    <div class="col-md-3">
      <select name="role" class="form-select">
        <option value="">Tất cả vai trò</option>
        <option value="user" <%= role==='user' ? 'selected' : '' %>>Người dùng</option>
        <option value="shop" <%= role==='shop' ? 'selected' : '' %>>Chủ shop</option>
        <option value="admin" <%= role==='admin' ? 'selected' : '' %>>Admin</option>
      </select>
    </div>
    <div class="col-md-3">
      <select name="status" class="form-select">
        <option value="">Tất cả trạng thái</option>
        <option value="active" <%= status==='active' ? 'selected' : '' %>>Hoạt động</option>
        <option value="inactive" <%= status==='inactive' ? 'selected' : '' %>>Bị khóa</option>
      </select>
    </div>
    <div class="col-md-3 d-flex gap-2">
      <button type="submit" class="btn btn-primary w-100">Lọc</button>
      <a href="/admin/users" class="btn btn-secondary">Reset</a>
    </div>
  </form>

  <!-- Bảng người dùng -->
  <div class="table-responsive">
    <table class="table table-bordered align-middle">
      <thead class="table-light">
        <tr>
          <th>#</th>
          <th>Họ tên</th>
          <th>Email</th>
          <th>Vai trò</th>
          <th>Trạng thái</th>
          <th>Ngày tạo</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% if (users.length === 0) { %>
          <tr>
            <td colspan="7" class="text-center text-muted">Không có người dùng nào</td>
          </tr>
        <% } else { %>
          <% users.forEach((user, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= user.fullName || '—' %></td>
              <td><%= user.email %></td>
              <td>
                <% if (user.role === 'admin') { %>
                  <span class="badge bg-danger">Admin</span>
                <% } else if (user.role === 'shop') { %>
                  <span class="badge bg-success">Chủ shop</span>
                <% } else { %>
                  <span class="badge bg-secondary">Người dùng</span>
                <% } %>
              </td>
              <td>
                <% if (user.isActive) { %>
                  <span class="badge bg-primary">Hoạt động</span>
                <% } else { %>
                  <span class="badge bg-warning text-dark">Bị khóa</span>
                <% } %>
              </td>
              <td><%= new Date(user.createdAt).toLocaleDateString('vi-VN') %></td>
              <td>
                <a href="/admin/users/<%= user._id %>" class="btn btn-sm btn-info me-1">
                  <i class="fas fa-eye"></i> Xem chi tiết
                </a>
                <form
                  action="/admin/users/toggle/<%= user._id %>"
                  method="post"
                  class="d-inline"
                  onsubmit="return confirm('Xác nhận thay đổi trạng thái người dùng này?');"
                >
                  <button type="submit" class="btn btn-sm <%= user.isActive ? 'btn-danger' : 'btn-success' %>">
                    <%= user.isActive ? 'Khóa' : 'Kích hoạt' %>
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
