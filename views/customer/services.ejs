<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-list me-2"></i>Danh sách dịch vụ</h2>
            <div class="d-flex gap-2">
                <a href="/customer/cart" class="btn btn-outline-primary">
                    <i class="fas fa-shopping-cart me-1"></i>Giỏ hàng
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" action="/customer/services">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="category" class="form-label">Loại dịch vụ</label>
                    <select class="form-select" id="category" name="category">
                        <option value="">Tất cả</option>
                        <option value="sound" <%= currentCategory === 'sound' ? 'selected' : '' %>>Âm thanh</option>
                        <option value="lighting" <%= currentCategory === 'lighting' ? 'selected' : '' %>>Ánh sáng</option>
                        <option value="venue" <%= currentCategory === 'venue' ? 'selected' : '' %>>Địa điểm</option>
                        <option value="furniture" <%= currentCategory === 'furniture' ? 'selected' : '' %>>Bàn ghế</option>
                        <option value="mc" <%= currentCategory === 'mc' ? 'selected' : '' %>>MC</option>
                        <option value="catering" <%= currentCategory === 'catering' ? 'selected' : '' %>>Catering</option>
                        <option value="decoration" <%= currentCategory === 'decoration' ? 'selected' : '' %>>Trang trí</option>
                        <option value="photography" <%= currentCategory === 'photography' ? 'selected' : '' %>>Chụp ảnh</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="minPrice" class="form-label">Giá từ</label>
                    <input type="number" class="form-control" id="minPrice" name="minPrice" value="<%= currentMinPrice || '' %>" placeholder="0">
                </div>
                <div class="col-md-2">
                    <label for="maxPrice" class="form-label">Giá đến</label>
                    <input type="number" class="form-control" id="maxPrice" name="maxPrice" value="<%= currentMaxPrice || '' %>" placeholder="1000000">
                </div>
                <div class="col-md-3">
                    <label for="search" class="form-label">Tìm kiếm</label>
                    <input type="text" class="form-control" id="search" name="search" value="<%= currentSearch || '' %>" placeholder="Tên dịch vụ...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-1"></i>Tìm kiếm
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Services Grid -->
<div class="row">
    <% if (services && services.length > 0) { %>
        <% services.forEach(service => { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <% if (service.images && service.images.length > 0) { %>
                        <img src="<%= service.images[0] %>" class="card-img-top" alt="<%= service.name %>" style="height: 200px; object-fit: cover;">
                    <% } else { %>
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    <% } %>
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= service.name %></h5>
                        <p class="card-text text-muted small">
                            <i class="fas fa-store me-1"></i><%= service.shop.shopName %>
                        </p>
                        <p class="card-text"><%= service.description.substring(0, 100) %>...</p>
                        
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="h5 text-primary mb-0">
                                    <%= service.price.toLocaleString() %> VNĐ
                                    <small class="text-muted">/<%= service.unit %></small>
                                </span>
                                <div class="text-warning">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="fas fa-star<%= i <= service.rating ? '' : '-o' %>"></i>
                                    <% } %>
                                    <small class="text-muted">(<%= service.totalReviews %>)</small>
                                </div>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <a href="/customer/services/<%= service._id %>" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>Xem chi tiết
                                </a>
                                <form action="/customer/cart/add" method="POST" class="d-inline">
                                    <input type="hidden" name="serviceId" value="<%= service._id %>">
                                    <div class="input-group input-group-sm">
                                        <input type="number" class="form-control" name="quantity" value="1" min="1" style="width: 60px;">
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-cart-plus"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Không tìm thấy dịch vụ nào</h4>
                <p class="text-muted">Hãy thử thay đổi bộ lọc tìm kiếm</p>
                <a href="/customer/services" class="btn btn-primary">
                    <i class="fas fa-refresh me-2"></i>Xem tất cả
                </a>
            </div>
        </div>
    <% } %>
</div>
