<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="fas fa-calendar-alt fa-3x text-primary mb-3"></i>
                    <h3 class="card-title">Đăng nhập</h3>
                    <p class="text-muted">Chào mừng bạn quay trở lại!</p>
                </div>

                <form action="/auth/login" method="POST">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p class="mb-0">Chưa có tài khoản? 
                        <a href="/auth/register" class="text-decoration-none">Đăng ký ngay</a>
                    </p>
                </div>

                <!-- Resend verification form -->
                <div class="mt-4">
                    <hr>
                    <div class="text-center">
                        <p class="text-muted small mb-3">Chưa nhận được email xác thực?</p>
                        <form action="/auth/resend-verification" method="POST" class="d-inline">
                            <div class="input-group mb-3">
                                <input type="email" class="form-control" name="email" placeholder="Nhập email của bạn" required>
                                <button type="submit" class="btn btn-outline-secondary">
                                    <i class="fas fa-paper-plane me-1"></i>Gửi lại
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
