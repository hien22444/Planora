<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-shopping-cart me-2"></i>Giỏ hàng</h2>
            <a href="/customer/services" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-1"></i>Tiếp tục mua sắm
            </a>
        </div>
    </div>
</div>

<% if (cart && cart.length > 0) { %>
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-list me-2"></i>Sản phẩm trong giỏ hàng</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Dịch vụ</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Tổng</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% cart.forEach(item => { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="<%= item.service.images && item.service.images[0] ? item.service.images[0] : '/images/placeholder.jpg' %>" 
                                                     alt="<%= item.service.name %>" 
                                                     class="rounded me-3" 
                                                     style="width: 60px; height: 60px; object-fit: cover;">
                                                <div>
                                                    <h6 class="mb-1"><%= item.service.name %></h6>
                                                    <small class="text-muted"><%= item.service.shop.shopName %></small>
                                                </div>
                                            </div>
                                        </td>
                                        <td><%= item.service.price.toLocaleString() %> VNĐ</td>
                                        <td>
                                            <div class="input-group" style="width: 120px;">
                                                <button class="btn btn-outline-secondary btn-sm" type="button" onclick="updateQuantity('<%= item.serviceId %>', -1)">-</button>
                                                <input type="number" class="form-control text-center" value="<%= item.quantity %>" min="1" readonly>
                                                <button class="btn btn-outline-secondary btn-sm" type="button" onclick="updateQuantity('<%= item.serviceId %>', 1)">+</button>
                                            </div>
                                        </td>
                                        <td><%= (item.service.price * item.quantity).toLocaleString() %> VNĐ</td>
                                        <td>
                                            <form action="/customer/cart/remove" method="POST" class="d-inline">
                                                <input type="hidden" name="serviceId" value="<%= item.serviceId %>">
                                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-calculator me-2"></i>Tổng kết</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính:</span>
                        <span><%= cart.reduce((sum, item) => sum + (item.service.price * item.quantity), 0).toLocaleString() %> VNĐ</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Phí vận chuyển:</span>
                        <span>0 VNĐ</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Tổng cộng:</strong>
                        <strong class="text-primary"><%= cart.reduce((sum, item) => sum + (item.service.price * item.quantity), 0).toLocaleString() %> VNĐ</strong>
                    </div>
                    
                    <div class="d-grid">
                        <a href="/customer/checkout" class="btn btn-primary btn-lg">
                            <i class="fas fa-credit-card me-2"></i>Thanh toán
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } else { %>
    <div class="row">
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Giỏ hàng trống</h4>
                <p class="text-muted">Bạn chưa có sản phẩm nào trong giỏ hàng</p>
                <a href="/customer/services" class="btn btn-primary">
                    <i class="fas fa-search me-2"></i>Tìm dịch vụ
                </a>
            </div>
        </div>
    </div>
<% } %>

<script>
function updateQuantity(serviceId, change) {
    // Implement quantity update logic
    console.log('Update quantity for service:', serviceId, 'change:', change);
}
</script>
