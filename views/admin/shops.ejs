<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-store me-2"></i>Quản lý Shop</h2>
            <div class="d-flex gap-2">
                <span class="badge bg-warning fs-6">
                    <i class="fas fa-clock me-1"></i>Chờ duyệt: <%= shops.filter(s => s.status === 'pending').length %>
                </span>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" action="/admin/shops">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="status" class="form-label">Trạng thái</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">Tất cả</option>
                        <option value="pending" <%= currentStatus === 'pending' ? 'selected' : '' %>>Chờ duyệt</option>
                        <option value="approved" <%= currentStatus === 'approved' ? 'selected' : '' %>>Đã duyệt</option>
                        <option value="rejected" <%= currentStatus === 'rejected' ? 'selected' : '' %>>Từ chối</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="search" class="form-label">Tìm kiếm</label>
                    <input type="text" class="form-control" id="search" name="search" value="<%= currentSearch || '' %>" placeholder="Tên shop, email...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-1"></i>Lọc
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Shops Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Thông tin Shop</th>
                        <th>Chủ sở hữu</th>
                        <th>Địa chỉ</th>
                        <th>Đánh giá</th>
                        <th>Trạng thái</th>
                        <th>Ngày đăng ký</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (shops && shops.length > 0) { %>
                        <% shops.forEach(shop => { %>
                            <tr>
                                <td>
                                    <div>
                                        <strong><%= shop.shopName %></strong>
                                        <br>
                                        <small class="text-muted"><%= shop.email %></small>
                                        <br>
                                        <small class="text-muted"><%= shop.phone %></small>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <strong><%= shop.owner.fullName %></strong>
                                        <br>
                                        <small class="text-muted"><%= shop.owner.email %></small>
                                        <br>
                                        <small class="text-muted"><%= shop.owner.phone %></small>
                                    </div>
                                </td>
                                <td>
                                    <small><%= shop.address %></small>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="text-warning me-1">
                                            <% for (let i = 1; i <= 5; i++) { %>
                                                <i class="fas fa-star<%= i <= Math.floor(shop.rating) ? '' : '-o' %>"></i>
                                            <% } %>
                                        </span>
                                        <small class="text-muted">(<%= shop.totalReviews %>)</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-<%= shop.status === 'approved' ? 'success' : shop.status === 'pending' ? 'warning' : 'danger' %>">
                                        <%= shop.status === 'pending' ? 'Chờ duyệt' : 
                                            shop.status === 'approved' ? 'Đã duyệt' : 'Từ chối' %>
                                    </span>
                                </td>
                                <td><%= new Date(shop.createdAt).toLocaleDateString('vi-VN') %></td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <% if (shop.status === 'pending') { %>
                                            <form action="/admin/shops/<%= shop._id %>/approve" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-success btn-sm" 
                                                        onclick="return confirm('Bạn có chắc muốn duyệt shop này?')">
                                                    <i class="fas fa-check me-1"></i>Duyệt
                                                </button>
                                            </form>
                                            <form action="/admin/shops/<%= shop._id %>/reject" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-danger btn-sm" 
                                                        onclick="return confirm('Bạn có chắc muốn từ chối shop này?')">
                                                    <i class="fas fa-times me-1"></i>Từ chối
                                                </button>
                                            </form>
                                        <% } else { %>
                                            <button class="btn btn-outline-primary btn-sm" onclick="viewShop('<%= shop._id %>')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                <i class="fas fa-store fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Không có shop nào</p>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

