<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="fas fa-key fa-3x text-primary mb-3"></i>
                    <h3 class="card-title">Quên mật khẩu</h3>
                    <p class="text-muted">Nhập email để đặt lại mật khẩu</p>
                </div>

                <form action="/auth/forgot-password" method="POST">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" class="form-control" id="email" name="email" required 
                                   placeholder="Nhập email của bạn">
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-paper-plane me-2"></i>Gửi email đặt lại
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p class="mb-0">Đã nhớ mật khẩu? 
                        <a href="/auth/login" class="text-decoration-none">Đăng nhập</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>