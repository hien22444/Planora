                    </div>
                    <div class="card-body">
                        <h6><%= service.shop.shopName %></h6>
                        <p class="text-muted mb-2">
                            <i class="fas fa-envelope me-2"></i><%= service.shop.email %>
                        </p>
                        <% if (service.shop.phone) { %>
                            <p class="text-muted mb-2"><i class="fas fa-phone me-2"></i><%= service.shop.phone %></p>
                        <% } %>
                        <% if (service.shop.address) { %>
                            <p class="text-muted mb-0"><i class="fas fa-map-marker-alt me-2"></i><%= service.shop.address %></p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ‚úÖ Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // üîÑ ƒê·ªïi ·∫£nh l·ªõn khi click thumbnail
        function changeImage(thumbnail) {
            const mainImage = document.getElementById('mainImage');
            mainImage.src = thumbnail.src;
            document.querySelectorAll('.thumbnail-list img').forEach(img => img.classList.remove('active'));
            thumbnail.classList.add('active');
        }

        // üõí G·ª≠i form th√™m v√†o gi·ªè h√†ng
        const addForm = document.getElementById('addToCartForm');
        if (addForm) {
            addForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                const formData = {
                    serviceId: '<%= service._id %>',
                    quantity: document.getElementById('quantity').value,
                    eventDate: document.getElementById('eventDate').value,
                    eventLocation: document.getElementById('eventLocation').value,
                    notes: document.getElementById('notes').value
                };

                const res = await fetch('/customer/cart/add', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify(formData)
                });

                const data = await res.json();
                alert(data.success ? '‚úÖ ƒê√£ th√™m v√†o gi·ªè h√†ng!' : '‚ùå L·ªói: ' + (data.message || 'Kh√¥ng th·ªÉ th√™m.'));
            });
        }
    </script>
</body>
</html>
