        <th style="padding:12px;">Khách hàng</th>
        <th style="padding:12px;">Shop</th>
        <th style="padding:12px;">Dịch vụ</th>
        <th style="padding:12px;">Trạng thái</th>
        <th style="padding:12px;">Hành động</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td style="padding:12px;">DH001</td>
        <td style="padding:12px;">Nguyễn Văn A</td>
        <td style="padding:12px;">Shop ABC</td>
        <td style="padding:12px;">Dịch vụ 1</td>
        <td style="padding:12px;">Chờ xác nhận</td>
        <td style="padding:12px;">
          <button style="padding:6px 12px;border-radius:6px;background:#d9534f;color:#fff;border:none;">Xử lý tranh chấp</button>
        </td>
      </tr>
      <tr>
        <td style="padding:12px;">DH002</td>
        <td style="padding:12px;">Trần Thị B</td>
        <td style="padding:12px;">Shop XYZ</td>
        <td style="padding:12px;">Dịch vụ 2</td>
        <td style="padding:12px;">Hoàn tất</td>
