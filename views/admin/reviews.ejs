<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-star me-2"></i>Quản lý đánh giá</h2>
            <div class="d-flex gap-2">
                <span class="badge bg-danger fs-6">
                    <i class="fas fa-flag me-1"></i>Báo cáo: <%= reviews.filter(r => r.isReported).length %>
                </span>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" action="/admin/reviews">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="status" class="form-label">Trạng thái</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">Tất cả</option>
                        <option value="reported" <%= currentStatus === 'reported' ? 'selected' : '' %>>Bị báo cáo</option>
                        <option value="hidden" <%= currentStatus === 'hidden' ? 'selected' : '' %>>Đã ẩn</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="search" class="form-label">Tìm kiếm</label>
                    <input type="text" class="form-control" id="search" name="search" value="<%= currentSearch || '' %>" placeholder="Tên khách hàng, nội dung...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-1"></i>Lọc
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Reviews Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Khách hàng</th>
                        <th>Dịch vụ</th>
                        <th>Shop</th>
                        <th>Đánh giá</th>
                        <th>Nội dung</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (reviews && reviews.length > 0) { %>
                        <% reviews.forEach(review => { %>
                            <tr>
                                <td>
                                    <div>
                                        <strong><%= review.customer.fullName %></strong>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <strong><%= review.service ? review.service.title : '' %></strong>
                                    </div>
                                </td>
                                <td>
                                    <strong><%= review.shop.shopName %></strong>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="text-warning me-1">
                                            <% for (let i = 1; i <= 5; i++) { %>
                                                <i class="fas fa-star<%= i <= review.rating ? '' : '-o' %>"></i>
                                            <% } %>
                                        </span>
                                        <small class="text-muted">(<%= review.rating %>/5)</small>
                                    </div>
                                </td>
                                <td>
                                    <div style="max-width: 200px;">
                                        <p class="mb-0"><%= review.comment.substring(0, 100) %><%= review.comment.length > 100 ? '...' : '' %></p>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <% if (review.isReported) { %>
                                            <span class="badge bg-danger mb-1">Bị báo cáo</span><br>
                                        <% } %>
                                        <% if (review.isVisible) { %>
                                            <span class="badge bg-success">Hiển thị</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">Đã ẩn</span>
                                        <% } %>
                                    </div>
                                </td>
                                <td><%= new Date(review.createdAt).toLocaleDateString('vi-VN') %></td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-outline-primary btn-sm" onclick="viewReview('<%= review._id %>')">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <form action="/admin/reviews/<%= review._id %>/toggle-visibility" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-outline-<%= review.isVisible ? 'warning' : 'success' %> btn-sm" 
                                                    data-action="<%= review.isVisible ? 'ẩn' : 'hiển thị' %>" onclick="return confirmAction(this)">
                                                <i class="fas fa-<%= review.isVisible ? 'eye-slash' : 'eye' %>"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="8" class="text-center py-4">
                                <i class="fas fa-star fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Không có đánh giá nào</p>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

